#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded blast ] } {
        module load blast
}

setenv CPC_HOME /usr/local/$name/$ver

prepend-path PATH /usr/local/$name/$ver/bin
prepend-path PATH /usr/local/$name/$ver/libs/estate/bin
prepend-path PATH /usr/local/$name/$ver/libs/libsvm/libsvm-2.81

prepend-path MANPATH /usr/local/$name/$ver/libs/estate/doc/man/
