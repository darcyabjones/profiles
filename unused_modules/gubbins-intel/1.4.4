#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

if { [ is-loaded python-gcc/2.7.5 ] } {
  module unload python-gcc/2.7.5
}

if { [ is-loaded python-gcc ] } {
  module unload python-gcc
}

if { ![ is-loaded python-gcc/3.3.3 ] } {
  module load python-gcc/3.3.3
}

if { ![ is-loaded raxml-intel ] } {
  module load raxml-intel/8.1.23
}

if { ![ is-loaded fastml ] } {
  module load fastml
}

if { ![ is-loaded fasttree-intel ] } {
  module load fasttree-intel
}

if { ![ is-loaded libtool-gcc ] } {
  module load libtool-gcc/2.4.2
}

prepend-path LD_LIBRARY_PATH /usr/local/$subname/$ver-$compiler/lib
prepend-path PATH /usr/local/$subname/$ver-$compiler/bin
