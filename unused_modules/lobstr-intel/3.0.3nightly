#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]


module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded boost-$compiler ] } {
	module load boost-$compiler
}

if { ![ is-loaded gsl-$compiler ] } {
	module load gsl-$compiler
}

setenv LOBSTR_HOME /usr/local/$subname/$ver-$compiler
setenv LOBSTR_DIR /usr/local/$subname/$ver-$compiler

prepend-path PATH /usr/local/$subname/$ver-$compiler/share/lobSTR/scripts:
prepend-path PATH /usr/local/$subname/$ver-$compiler/bin
