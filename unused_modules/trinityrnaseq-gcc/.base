#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded gcc ] } {
  module load gcc
}

if { ![ is-loaded java ] } {
  module load java
}

prepend-path PATH /usr/local/$subname/$ver-$compiler
prepend-path PATH /usr/local/$subname/$ver-$compiler/Inchworm/bin
prepend-path PATH /usr/local/$subname/$ver-$compiler/Chrysalis
prepend-path PATH /usr/local/$subname/$ver-$compiler/Butterfly
prepend-path PATH /usr/local/$subname/$ver-$compiler/trinity-plugins/transdecoder
prepend-path PERL5LIB /usr/local/$subname/$ver-$compiler/PerlLib
