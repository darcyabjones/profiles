#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

setenv NGS_HOME /usr/local/$subname/$ver-$compiler
setenv NGS_LIBDIR /usr/local/$subname/$ver-$compiler/lib64
#setenv PYTHONHOME /usr/local/$subname/$ver-$compiler

prepend-path --delim " " CPPFLAGS -I$env(NGS_HOME)/include
prepend-path --delim " " LDFLAGS -L$env(NGS_LIBDIR)

prepend-path LD_LIBRARY_PATH $env(NGS_LIBDIR)
prepend-path CLASSPATH $env(NGS_HOME)/jar/ngs-java.jar
