#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded alleleCount-gcc] } {
  module load alleleCount-gcc
}
if { ![ is-loaded cgpbattenberg] } {
  module load cgpbattenberg/1.3.1
}

setenv ASCATNGS_HOME /usr/local/$subname/$ver-$compiler

prepend-path PATH $env(ASCATNGS_HOME)/bin
prepend-path LD_LIBRARY_PATH $env(ASCATNGS_HOME)/lib
prepend-path MANPATH $env(ASCATNGS_HOME)/man
prepend-path PERL5LIB $env(ASCATNGS_HOME)/lib/perl5
prepend-path PERL5LIB /usr/local/ascatNgs/1.5.2-gcc/lib/perl5/x86_64-linux-thread-multi-ld
