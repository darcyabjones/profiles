#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name"
}

module-whatis   "Set environment variables to use $name"

if { ![ is-loaded perl ] } {
  module load perl
}

if { ![ is-loaded bowtie-gcc/1.0.0 ] } {
  module load bowtie-gcc/1.0.0
}

prepend-path PATH /usr/local/$name/$ver/
prepend-path PATH /usr/local/$name/$ver/essentials/ViennaRNA-1.8.4/install_dir/bin
prepend-path PATH /usr/local/$name/$ver/essentials/squid-1.9g
prepend-path PATH /usr/local/$name/$ver/essentials/randfold-2.0

prepend-path LD_LIBRARY_PATH /usr/local/$name/$ver/essentials/ViennaRNA-1.8.4/install_dir/lib

