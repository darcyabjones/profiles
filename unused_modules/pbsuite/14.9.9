#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded python-gcc/2.7.5 ] } {
  module load python-gcc/2.7.5
}

if { ![ is-loaded blasr-gcc/06102014 ] } {
  module load blasr-gcc/06102014
}


prepend-path PATH /usr/local/$name/$ver/bin
prepend-path PYTHONPATH /usr/local/$name/$ver

setenv SWEETPATH /usr/local/$name/$ver 
