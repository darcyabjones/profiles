#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]


module-whatis   "Set environment variables to use $name version $ver"

prepend-path --delim " " CPPFLAGS -I/usr/local/$name/$ver/jdk$ver/include
#prepend-path --delim " " LDFLAGS -L/usr/local/$name/$ver/lib

prepend-path LD_LIBRARY_PATH /usr/local/$name/$ver/jdk$ver/lib
prepend-path MANPATH /usr/local/$name/$ver/jdk$ver/man
prepend-path PATH /usr/local/$name/$ver/jdk$ver/bin

setenv JAVA_HOME        /usr/local/$name/$ver/jdk$ver/
setenv JRE_HOME         /usr/local/$name/$ver/jdk$ver/jre
setenv JAVA_BINDIR      /usr/local/$name/$ver/jdk$ver/bin
setenv JAVA_ROOT        /usr/local/$name/$ver/jdk$ver/

