#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

module-whatis   "Set environment variables to use $name version $ver"

if { [ is-loaded python-intel ] } {
  module unload python-intel
}

if { [ is-loaded python-gcc ] } {
  module unload python-gcc
}

module load python-gcc/2.7.5

if { ![ is-loaded bowtie2-intel ] } {
  module load bowtie2-intel/2.2.4
}

if { [ is-loaded samtools-gcc ] } {
  module unload samtools-gcc
}

if { ! [ is-loaded samtools-intel ] } {
  module load samtools-intel/0.1.18
}

prepend-path PATH /usr/local/$name/$ver/scripts
prepend-path PATH /usr/local/$name/$ver/database_clustering
setenv SRST2_DIR /usr/local/$name/$ver
