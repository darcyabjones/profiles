#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded pcapcore-gcc] } {
  module load pcapcore-gcc
}

setenv ALLELECOUNT_HOME /usr/local/$subname/$ver-$compiler

prepend-path PATH $env(ALLELECOUNT_HOME)/bin
prepend-path LD_LIBRARY_PATH $env(ALLELECOUNT_HOME)/lib
prepend-path MANPATH $env(ALLELECOUNT_HOME)/man
prepend-path --delim " " CPPFLAGS -I$env(ALLELECOUNT_HOME)/include
prepend-path PERL5LIB $env(ALLELECOUNT_HOME)/lib/perl5
prepend-path PERL5LIB $env(ALLELECOUNT_HOME)/lib/perl5/x86_64-linux-thread-multi-ld
