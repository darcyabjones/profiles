#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]


module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded blast ] } {
        module load blast
}

if { ![ is-loaded soapaligner ] } {
        module load soapaligner
}

if { ![ is-loaded miranda-gcc ] } {
        module load miranda-gcc
}

if { ![ is-loaded mirdeep2 ] } {
        module load mirdeep2
}

prepend-path PATH /usr/local/$name/$ver/
prepend-path PATH /usr/local/$name/$ver/program
