#%Module1.0#####################################################################
##
## $name modulefile
##

set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]-[lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name
}

module-whatis   "Set environment variables to use $name "

if { ![ is-loaded ncbi-vdb-gcc ] } {
  module load ncbi-vdb-gcc
}

setenv BIONODE_NCBI_HOME /usr/local/$subname

prepend-path PATH $env(BIONODE_NCBI_HOME)/bin
