#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"


#if { ![ is-loaded hmmer-intel ] } {
#  module load hmmer-intel
#}

if { ![ is-loaded perl ] } {
  module load perl
}


prepend-path PATH /usr/local/$subname/$ver-$compiler/bin
prepend-path PATH /usr/local/$subname/$ver-$compiler/
#prepend-path LD_LIBRARY_PATH /usr/local/$subname/$ver-$compiler/lib64


setenv	PERL5LIB /usr/local/transdecoder/$ver-$compiler/PerlLib
setenv  TRANSDECODER_DIR              /usr/local/$subname/$ver-$compiler/
setenv  TRANSDECODER_HOME        /usr/local/$subname/$ver-$compiler/

