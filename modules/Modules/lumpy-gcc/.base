#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded python-gcc/2.7.5 ] } {
  module load openmpi
}

if { ![ is-loaded samtools-intel/0.1.19 ] } {
  module load samtools-intel/0.1.19
}

if { ![ is-loaded bedtools-intel] } {
  module load bedtools-intel
}

if { ![ is-loaded bamtools-intel/2.3.0] } {
  module load bamtools-intel/2.3.0
}

if { ![ is-loaded bwa-intel/0.7.10] } {
  module load bwa-intel/0.7.10
}



prepend-path PATH /usr/local/$subname/$ver-$compiler/bin
