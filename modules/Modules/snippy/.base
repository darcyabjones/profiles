#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded vcflib-gcc ] } {
  module load vcflib-gcc
}

if { ![ is-loaded perl ] } {
  module load perl
}

if { ![ is-loaded bwa-intel ] } {
  module load bwa-intel/0.7.5a
}

if { ![ is-loaded samtools-gcc ] } {
  module load samtools-gcc/0.1.19
}

if { ![ is-loaded freebayes-gcc ] } {
  module load freebayes-gcc
}

prepend-path PATH /usr/local/$name/$ver/bin
