#%Module1.0#####################################################################
##
## intel compiler modulefile
##

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for intel opencl compiler v1.2"
}

set ipath /usr/local/intel/opencl-1.2-3.2.1.16712

module-whatis   "Set environment variables to use the intel opencl compiler version 1.2"

prepend-path    PATH            $ipath/bin

prepend-path	INCLUDE		$ipath/include
prepend-path	LDFLAGS		"-L$ipath/lib64 -lOpenCL"

prepend-path    LD_LIBRARY_PATH $ipath/libmic/
prepend-path    LD_LIBRARY_PATH $ipath/lib64/
