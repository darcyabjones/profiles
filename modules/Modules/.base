#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name"
}

module-whatis   "Set environment variables to use $name"

if { ![ is-loaded java ] } {
  module load java
}

if { ![ is-loaded python-gcc ] } {
  module load python-gcc
}


prepend-path PATH /usr/local/$name/$ver/
prepend-path PATH /usr/local/$name/$ver/AMOS/Linux-x86_64/bin
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/abyss/bin
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/cgal
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/kmergenie
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/MetaVelvet
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/Ray/bin
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/prokka/bin
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/sga/bin
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/velvet
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/SparseAssembler
prepend-path PATH /usr/local/$name/$ver/Utilities/cpp/Linux-x86_64/mira

setenv  BLASTDB /usr/local/metamos/1.5rc3/Utilities/DB/blastdbs
