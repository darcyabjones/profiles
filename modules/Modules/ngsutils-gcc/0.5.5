#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]
set subname [lrange [split $name - ] 0 0 ]
set compiler [lrange [split $name - ] 1 1 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
}

module-whatis   "Set environment variables to use $name version $ver"

prepend-path --delim " " CPPFLAGS -I/usr/local/$subname/$ver-$compiler/venv/include/python2.6
prepend-path --delim " " LDFLAGS -L/usr/local/$subname/$ver-$compiler/venv/lib

prepend-path INCLUDE /usr/local/$subname/$ver-$compiler/venv/include/bam/python2.6
prepend-path LD_LIBRARY_PATH /usr/local/$subname/$ver-$compiler/venv/lib
prepend-path PATH /usr/local/$subname/$ver-$compiler/venv/bin

setenv NGSHOME /usr/local/$subname/$ver-$compiler/
setenv PYTHONHOME /usr/local/$subname/$ver-$compiler/venv
