#%Module1.0#####################################################################
##
## $name modulefile
##

set ver [lrange [split [ module-info name ] / ] 1 1 ]
set name [lrange [split [ module-info name ] / ] 0 0 ]

proc ModulesHelp { } {
  puts stderr "\tThis module sets the envinronment for $name v$ver"
  puts stderr "TMHMM is non-transferable and for academic-use only.  By using it you agree to vendor's licence: http://www.cbs.dtu.dk/cgi-bin/nph-sw_request?tmhmm"
}

module-whatis   "Set environment variables to use $name version $ver"

if { ![ is-loaded perl-gcc ] } {
  module load perl-gcc
}

prepend-path PATH /usr/local/$name/$ver/bin
prepend-path PERL5LIB /usr/local/$name/$ver/lib

puts stderr "TMHMM is non-transferable and for academic-use only.  By using it you agree to vendor's licence: http://www.cbs.dtu.dk/cgi-bin/nph-sw_request?tmhmm"

